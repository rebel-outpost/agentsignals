%body.contrast-blue.login.contrast-background
  .middle-container
    .middle-row
      .middle-wrapper
        .login-container-header
          .container
            .row
              .col-sm-12
                .text-center
                  %h1 Simple CRM

        .login-container
          .container
            .row
              .col-sm-4.col-sm-offset-4
                %h1.text-center.title Sign in
                = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
                  .form-group
                    .controls.with-icon-over-input
                      = f.input :email, required: false, autofocus: true, label: false, placeholder: 'test@example.com', class: 'form-control'
                      %i.icon-user.text-muted
                  .form-group
                    .controls.with-icon-over-input
                      = f.input :password, required: false, label: false, placeholder: 'password', class: 'form-control'
                      %i.icon-lock.text-muted
                  .checkbox
                    %label{for: "remember_me"}
                      = f.input :remember_me, as: :boolean, inline_label: 'Remember me', label: false if devise_mapping.rememberable?
                      Remember me
                  %button.btn.btn-block{type: "submit"} Sign in
                .text-center
                  %hr.hr-normal
                  = render "devise/shared/links"

        .login-container-footer