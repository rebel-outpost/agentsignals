
.row
  .col-md-6.col-md-offset-2.text-center
    %h1 Sign In
.row
  .col-md-6.col-md-offset-2.text-center
    .box
      .form
        = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          .form-group
            = f.input :email, required: false, autofocus: true, label: false, placeholder: 'test@example.com', class: 'form-control'
          = f.input :password, required: false, label: false, placeholder: 'password', class: 'form-control'
          = f.input :remember_me, as: :boolean, inline_label: 'Remember me', label: false if devise_mapping.rememberable?
          = f.submit "Sign in", class: "btn btn-primary"
          %hr.hr-normal
          = render "devise/shared/links"

