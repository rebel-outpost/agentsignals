%section#content
  .container
    #content-wrapper.row
      .col-xs-12
        .row
          .col-sm-9.col-sm-offset-1
            .page-header
              %h1.pull-left
                %i.icon-user
                %span Agent Signals

          .row.login-container
            .col-sm-4.col-sm-offset-3
              %h2.text-center.title Sign in
              = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
                .form-group
                  .controls.with-icon-over-input
                    = f.input :email, required: false, autofocus: true, label: false, placeholder: 'test@example.com', class: 'form-control'
                    %i.icon-user.text-muted
                .form-group
                  .controls.with-icon-over-input
                    = f.input :password, required: false, label: false, placeholder: 'password', class: 'form-control'
                    %i.icon-lock.text-muted
                .checkbox
                  %label{for: "remember_me"}
                    = f.input :remember_me, as: :boolean, inline_label: 'Remember me', label: false if devise_mapping.rememberable?
                    Remember me
                %button.btn.btn-block.btn-primary{type: "submit"} Sign in
              .text-center
                %hr.hr-normal
                = render "devise/shared/links"

