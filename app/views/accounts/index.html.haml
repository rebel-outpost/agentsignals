.group-header
  .row
    .col-sm-6.col-sm-offset-2
      .text-center
        %h2 Accounts

.row
  .col-sm-10
    .box.bordered-box.blue-border{style: "margin-bottom:0;"}
      .box-header.blue-background
        .title
          Current Accounts
      .box-content.box-no-padding
        .responsive-table
          .scrollable-area
            %table.data-table.table.table-bordered.table-striped.dataTable
              %thead
                %tr
                  %th
                    Account Name
                  %th
                    Assigned To
                  %th
                    Phone
                  %th
                    Website
                  %th
                    Email
                  %th
                    Actions
              %tbody
                - @accounts.each do |account|
                  %tr
                    %td
                      = account.name
                    %td
                      = account.assigned_to.to_s
                    %td
                      = account.phone
                    %td
                      = account.website
                    %td
                      = account.email
                    %td
                      = link_to '', account_path(account), class: 'icon-edit', id: 'edit'
                      = link_to '', account_path(account), method: 'delete', class: 'icon-trash', data: {confirm: 'Are you sure that you want to delete this account?'}, id: 'delete'
