.row
  .col-sm-12
    .box.box-content.box-no-padding
      .responsive-table
        .scrollable-area
          %table#datatable.table.table-bordered
            %thead
              %tr
                %th
                  Name
                %th
                  Email
                %th
                  Phone

            %tbody
              - @users.each do |user|
                %tr
                  %td
                    = user.full_name
                  %td
                    = user.email
                  %td
                    = user.phone
