.fieldset
  = simple_form_for @account, :html => { :class => 'form-horizontal' }  do |f|
    .col-sm-4
      .form-group
        = f.input :name
      .form-group
        = f.input :email
      .form-group
        = f.input :assigned_to, collection:(@lead_owner)
      .form-group
        = f.input :website
    .col-sm-4.col-sm-offset-1
      .form-group
        = f.input :phone
      .form-group
        = f.input :address

    .row
      .col-sm-8
        = f.submit class: 'btn btn-primary'
        = link_to 'Cancel', accounts_path, class: "btn btn-danger"
