.row
  .col-md-6
    %h1 Current Leads
  .col-md-6
    = link_to 'New Opportunity', new_opportunity_path, class: 'btn btn-default'

.row
  .col-sm-10
    .box.box-content.box-no-padding
      .responsive-table
        .scrollable-area
          %table#datatable.table.table-bordered
            %thead
              %tr
                %th
                  Opportunity Name
                %th
                  Contact Name
                %th
                  Amount
                %th
                  Stage
                %th
                  Assigned to
                %th
                  Closing Date
                %th
                  Actions
            %tbody
              - @opportunities.each do |opportunity|
                %tr
                  %%td
                    = opportunity.opportunity_name
                  %td
                    = opportunity.contact_name
                  %td
                    = opportunity.amount
                  %td
                    = opportunity.stage
                  %td
                    = opportunity.owner
                  %td
                    = opportunity.closing_date
                  %td
                    = link_to opportunity_path(opportunity), id: 'edit' do
                      %i.fa.fa-edit
                    = link_to opportunity_path(opportunity), data: {confirm: 'Are you sure that you want to delete this opportunity?'}, method: :delete, id: 'delete' do
                      %i.fa.fa-trash-o