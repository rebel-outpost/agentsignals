.row
  .col-md-6
    %h1 Listings
  .col-md-6
    = link_to 'New Listing', new_listing_path, class: 'btn btn-default'

.row
  .col-sm-10
    .box.box-content.box-no-padding
      .responsive-table
        .scrollable-area
          %table#datatable.table.table-bordered
            %thead
              %tr
                %th
                  Title
                %th
                  Price
                %th
                  Address
                %th
                  City
                %th
                  State
                %th
                  Zip
                %th
                  Actions

            %tbody
              - if @listings.present?
                - @listings.each do |f|
                  %tr
                    %td
                      = f.title
                    %td
                      = f.price
                    %td
                      = f.street_address
                    %td
                      =f.city_name
                    %td
                      =f.state
                    %td
                      =f.zipcode
                    %td
                      = link_to listing_path(f), id: 'edit' do
                        %i.fa.fa-edit
                      = link_to listing_path(f), data: {confirm: 'Are you sure that you want to delete this listing?'}, method: :delete, id: 'delete' do
                        %i.fa.fa-trash-o