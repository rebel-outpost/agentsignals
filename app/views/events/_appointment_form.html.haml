- ajax ||= false
= simple_form_for @appointment, url: params[:action] == "edit" ? event_path(@appointment) : events_path, method: :post, remote: ajax do |f|
  .clearfix
    = f.input :name
  .row.clearfix
    .col-md-6.col-sm-12
      = f.input :due_date, label: "Starts", as: :string, input_html: { autocomplete: "off", class: 'datetime-picker' }
    .col-md-6.col-sm-12
      = f.input :ends, as: :string, input_html: { autocomplete: "off", class: 'datetime-picker' }
  .clearfix
    = f.input :all_day
  .clearfix
    = f.input :notes, input_html: { rows: 5 }
  .modal-footer
    = f.submit class: 'btn btn-primary'
