- content_for :subnav do
  .row
    .col-md-12

.row
  .col-sm-12
    .box.box-content.box-no-padding
      .responsive-table
        .scrollable-area
          %table#datatable.table.table-bordered
            %thead
              %tr
                %th
                  Task Name
                %th
                  Due Date
                %th
                  Assigned To
                %th
                  Task Type
                %th
                  Name of Lead
                %th
                  Actions
            %tbody
              - @tasks.each do |task|
                %tr
                  %td
                    = task.name
                  %td
                    = task.due_date.to_s.capitalize
                  %td
                    = task.assigned_to
                  %td
                    = task.task_type.to_s.capitalize
                  %td
                    = task.lead_for_task
                  %td
                    = link_to task_path(task), id: 'edit' do
                      %i.fa.fa-edit
                    = link_to task_path(task), data: {confirm: 'Are you sure that you want to delete this task_path?'}, method: :delete, id: 'delete' do
                      %i.fa.fa-trash-o