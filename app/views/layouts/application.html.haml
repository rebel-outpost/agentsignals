!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Agent Signals'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Agent Signals'}"}
    %meta{ name: 'stripe-key',  content: STRIPE_PUBLIC_KEY }
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag 'https://js.stripe.com/v1/', "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  %body
    .row
      .col-md-12
        %nav.navbar-default{role: "navigation"}
          .navbar-header
            %button.navbar-toggle{"data-target" => "#sidebar", "data-toggle" => "collapse", type: "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            .navbar-brand= link_to image_tag('agentsignals.png'), root_path
          .collapse.navbar-collapse
            %ul.nav.navbar-nav#top-navbar.pull-right
              %li.drop-down
                = link_to "#", html_options = {"data-toggle" => "dropdown"} do
                  %i.fa.fa-gear
                %ul.dropdown-menu
                  %li= link_to "Account Settings", "#"
              %li.drop-down
                = link_to "#", html_options = {"data-toggle" => "dropdown"} do
                  %i.fa.fa-user
                %ul.dropdown-menu
                  %li= link_to "hello bob", "#"
              %li
                = link_to destroy_user_session_path, method: :delete do
                  %i.fa.fa-sign-out

    .row
      .col-md-2
        #sidebar.sidebar.nav-collapse.collapse.in
          = render_navigation expand_all: true
    

      .col-md-10
        = render 'layouts/messages'
        = yield
