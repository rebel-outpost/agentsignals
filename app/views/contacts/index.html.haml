.row
  .col-md-6
    %h1 Current Contacts
  .col-md-6.text-right
    = link_to 'New Contact', new_contact_path, class: 'btn btn-default'

.row
  .col-md-12
    .content
      .box-content.box-no-padding
        .responsive-table
          .scrollable-area
            %table.data-table.table.table-bordered.dataTable
              %thead
                %tr
                  %th
                    First
                  %th
                    Last
                  %th
                    Company
                  %th
                    E-mail
                  %th
                    Phone
                  %th
                    Address
                  %th
                    Actions

              %tbody
                - if @contacts.present?
                  - @contacts.each do |f|
                    %tr
                      %td
                        = f.first_name
                      %td
                        = f.last_name
                      %td
                        = f.company
                      %td
                        =f.email
                      %td
                        =f.phone
                      %td
                        =f.address
                      %td
                        = link_to '', contact_path(f), class: 'icon-edit', id: 'edit'
                        = link_to '', contact_path(f), method: 'delete', class: 'icon-trash', data: {confirm: 'Are you sure that you want to delete this contact?'}, id: 'delete'