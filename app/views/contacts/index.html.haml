.group-header
  .row
    / .col-sm-6.col-sm-offset-2
    /   .text-center
    /     %h2 Contacts

.row
  .col-sm-12
    .box.bordered-box.blue-border{style: "margin-bottom:0;"}
      .box-header.blue-background
        .title
          Current Contacts
        .add-new
          = link_to 'New Contact', new_contact_path, class: 'btn'
      .box-content.box-no-padding
        .responsive-table
          .scrollable-area
            %table.data-table.table.table-bordered.dataTable
              %thead
                %tr
                  %th
                    First
                  %th
                    Last
                  %th
                    Company
                  %th
                    E-mail
                  %th
                    Phone
                  %th
                    Address
                  %th
                    Actions

              %tbody
                - if @contacts.present?
                  - @contacts.each do |f|
                    %tr
                      %td
                        = f.first_name
                      %td
                        = f.last_name
                      %td
                        = f.company
                      %td
                        =f.email
                      %td
                        =f.phone
                      %td
                        =f.address
                      %td
                        = link_to '', contact_path(f), class: 'icon-edit', id: 'edit'
                        = link_to '', contact_path(f), method: 'delete', class: 'icon-trash', data: {confirm: 'Are you sure that you want to delete this contact?'}, id: 'delete'