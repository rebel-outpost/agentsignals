.row
  .col-md-6
    %h1 Current Contacts
  .col-md-6
    = link_to 'New Contact', new_contact_path, class: 'btn btn-default'

.row
  .col-sm-10
    .box.box-content.box-no-padding
      .responsive-table
        .scrollable-area
          %table#datatable.table.table-bordered
            %thead
              %tr
                %th
                  First
                %th
                  Last
                %th
                  Company
                %th
                  E-mail
                %th
                  Phone
                %th
                  Address
                %th
                  Actions

            %tbody
              - if @contacts.present?
                - @contacts.each do |f|
                  %tr
                    %td
                      = f.first_name
                    %td
                      = f.last_name
                    %td
                      = f.company
                    %td
                      =f.email
                    %td
                      =f.phone
                    %td
                      =f.address
                    %td
                      = link_to edit_contact_path(f), id: 'edit' do
                        %i.fa.fa-edit
                      = link_to contact_path(f), data: {confirm: 'Are you sure that you want to delete this contact?'}, method: :delete, id: 'delete' do
                        %i.fa.fa-trash-o