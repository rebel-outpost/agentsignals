.fieldset
  = simple_form_for @lead, :html => { :class => 'form-horizontal' }  do |f|
    .col-sm-4
      .form-group
        = f.input :first_name
      .form-group
        = f.input :last_name
      .form-group
        = f.input :email, as: :email
      .form-group
        = f.input :phone
      .form-group
        = f.input :comments, as: :text, :input_html => {rows: 5}
    .col-sm-4.col-sm-offset-1
      .form-group
        = f.input :lead_owner, collection:(@lead_owner)
      .form-group
        = f.input :lead_type, collection:(@lead_interests)
      .form-group
        = f.input :lead_status, collection:(@lead_status)
      .form-group
        = f.input :lead_source, collection:(@lead_sources)

    .row
      .col-sm-10
        %h4 Address Info
        .col-sm-4
          .form-group
            = f.input :address
          .form-group
            = f.input :city
        .col-sm-4.col-sm-offset-1
          .form-group
            = f.input :state
          .form-group
            = f.input :zip

    .row
      = f.submit class: 'btn btn-primary'
      = link_to 'Cancel', leads_path, class: "btn btn-danger"

